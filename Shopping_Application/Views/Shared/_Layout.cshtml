<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Der Buchladen - ASP.NET-Anwendung</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Der Buchladen</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link">
                        @Html.ActionLink("Home", "Index", "Home")
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">@Html.ActionLink("Produkte", "Index", "Product")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">@Html.ActionLink("Informationen", "About", "Home")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">@Html.ActionLink("Kontakt", "Contact", "Home")</a>
                </li>
            </ul>
            <ul class="navbar-nav mr-auto" aign="center">
                <li>
                    @if (Session["userId"] != null)
                    {
                        <p>Hallo @Session["userFirstName"] @Session["userLastName"]</p>
                    }
                </li>
            </ul>
            <ul class="navbar-nav mr-auto" aign="right">
                <li>
                    <a href="@Url.Action("Index", "Cart")">
                        <img src="~/Content/PicturesWebPage/cart.jpg" width="30" />
                    </a>
                </li>
                <li>
                    @if (Session["userId"] == null)
                    {
                        <a href="@Url.Action("Index", "SignIn")">
                            <img src="~/Content/PicturesWebPage/profile.png" width="30" />
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("LogOut", "SignIn")">
                            <img src="~/Content/PicturesWebPage/LogOut.png" width="30" />
                        </a>
                    }
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meine ASP.NET-Anwendung</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
