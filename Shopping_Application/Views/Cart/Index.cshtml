
@using Shopping_Application.Models

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
</head>
<body>
    <br>
    <h3>Cart Page</h3>
    <br>
    <table class="table table-hover">
        <tr class="table-dark">
            <th>Option</th>
            <th>Titel</th>
            <th></th>
            <th>Preis</th>
            <th>Anzahl</th>
            <th>Zwischensumme</th>
        </tr>
        @foreach (Item item in (List<Item>)Session["cart"])
        {
            <tr class="table-dark">
                <td><button type="button" class="btn btn-outline-warning btn-sm">
                    <a href="@Url.Action("Remove", "Cart", new { id = item.Product.Id })">Entfernen</a>
                </button></td>
                <td>@item.Product.Titel</td>
                <td><img src="~/Content/Images/@item.Product.Photo" width="60" /></td>
                <td>@item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Price * item.Quantity)</td>
            </tr>
        }
        <tr class="table-dark">
            <td align="right" colspan="6">Summe</td>
            <td>
                @{
                    List<Item> cart = (List<Item>)Session["cart"];
                    var total = cart.Sum(item => item.Product.Price * item.Quantity);
                }
                @total
            </td>
        </tr>
    </table>
    <br>
    <button type="button" class="btn btn-warning disabled">
        <a href="@Url.Action("Index", "Product")">Weiter einkaufen</a>
    </button>

</body>
</html>
